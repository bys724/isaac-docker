# Isaac Docker 환경 변수 설정 파일
# 이 파일을 .env로 복사하여 사용하세요
# cp config/env.example .env

# Display 설정 (Linux GUI)
DISPLAY=:0

# NVIDIA 설정
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all

# Isaac Sim/Lab EULA 동의
ACCEPT_EULA=Y

# WandB 설정 (선택사항)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=isaac-lab-experiments

# 데이터 디렉토리 경로
DATA_PATH=./data
LOGS_PATH=./logs
EXPERIMENTS_PATH=./experiments
CHECKPOINTS_PATH=./checkpoints

# Jupyter 설정
JUPYTER_PORT=8888
JUPYTER_TOKEN=

# TensorBoard 설정
TENSORBOARD_PORT=6006

# Isaac Sim 서버 설정
OMNI_SERVER=localhost
OMNI_PORT=8899

# 컨테이너 이름 프리픽스
CONTAINER_PREFIX=isaac

# GPU 설정 (특정 GPU만 사용하려면 수정)
# CUDA_VISIBLE_DEVICES=0,1